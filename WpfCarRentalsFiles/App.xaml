<Application x:Class="WpfCarRentalsFiles.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="View/ChooseRole.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <!-- ══ COLOR PALETTE ══ -->
            <SolidColorBrush x:Key="BrandPrimary"      Color="#8A2BE2"/>
            <SolidColorBrush x:Key="BrandDeep"         Color="#2D0B6B"/>
            <SolidColorBrush x:Key="BrandMedium"       Color="#3D1A7A"/>
            <SolidColorBrush x:Key="BrandLight"        Color="#C9B8E8"/>
            <SolidColorBrush x:Key="BrandSoft"         Color="#D4C5F0"/>
            <SolidColorBrush x:Key="BrandPale"         Color="#E8D8FF"/>
            <SolidColorBrush x:Key="SurfaceInput"      Color="#F8F4FF"/>
            <SolidColorBrush x:Key="TextDark"          Color="#2A1B5E"/>
            <SolidColorBrush x:Key="TextMedium"        Color="#3D1A7A"/>
            <SolidColorBrush x:Key="TextMuted"         Color="#7E74A6"/>
            <SolidColorBrush x:Key="TextLight"         Color="#C9B8E8"/>
            <SolidColorBrush x:Key="TextBreadcrumb"    Color="#C4B0E0"/>
            <SolidColorBrush x:Key="TextHint"          Color="#AAA"/>
            <SolidColorBrush x:Key="BorderSoft"        Color="#D0C4F0"/>
            <SolidColorBrush x:Key="BorderInput"       Color="#E0D4FF"/>
            <SolidColorBrush x:Key="ColorError"        Color="#C0304A"/>
            <SolidColorBrush x:Key="ColorErrorBg"      Color="#FFF0F5"/>
            <SolidColorBrush x:Key="ColorErrorBorder"  Color="#F0C0D0"/>

            <!-- ══ GLOBAL FONT ══ -->
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize"   Value="13"/>

            </Style>


            <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Height" Value="45"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Grid Background="{TemplateBinding Background}">
                                <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="{TemplateBinding Padding}"
                                  VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="InputPasswordBoxStyle" TargetType="PasswordBox">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Height" Value="45"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="PasswordBox">
                            <Grid Background="{TemplateBinding Background}">
                                <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="{TemplateBinding Padding}"
                                  VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!-- ══ LOGIN BUTTON ══ -->
            <Style x:Key="LoginButtonStyle" TargetType="Button">
                <Setter Property="Height"          Value="46"/>
                <Setter Property="FontSize"        Value="16"/>
                <Setter Property="FontWeight"      Value="Bold"/>
                <Setter Property="FontFamily"      Value="Segoe UI"/>
                <Setter Property="Foreground"      Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor"          Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#C8B6FF" BlurRadius="20"
                                                      ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.88"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.75"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ══ BACK / TRANSPARENT BUTTON ══ -->
            <Style x:Key="BackButtonStyle" TargetType="Button">
                <Setter Property="Background"      Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground"      Value="{StaticResource TextMedium}"/>
                <Setter Property="Cursor"          Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>




            <!-- ══ HAMBURGER BUTTON ══ -->
            <Style x:Key="HamburgerButtonStyle" TargetType="Button">
                <Setter Property="Background"      Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground"      Value="{StaticResource TextMedium}"/>
                <Setter Property="Width"           Value="35"/>
                <Setter Property="Height"          Value="35"/>
                <Setter Property="FontSize"        Value="18"/>
                <Setter Property="Cursor"          Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ══ SCROLLBAR SLIM ══ -->
            <Style TargetType="ScrollBar">
                <Setter Property="Width" Value="6"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>