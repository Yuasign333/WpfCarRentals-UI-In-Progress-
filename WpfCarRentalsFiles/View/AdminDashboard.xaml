<Window x:Class="WpfFirst.View.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rental Rev. — Admin Dashboard"
        Height="600" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Viewbox Stretch="UniformToFill">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="0"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Grid Grid.Column="0" x:Name="Sidebar">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF7D4FD2" Offset="0"/>
                        <GradientStop Color="#E8D8FF" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Image Source="https://i.imgur.com/vTJAlag.jpeg" Opacity="0.10"
                       Stretch="Fill" Margin="-18,0,5,0" Grid.RowSpan="3">
                    <Image.Effect>
                        <BlurEffect Radius="18"/>
                    </Image.Effect>
                </Image>
                <StackPanel Grid.Row="0" Margin="0,26,0,28" HorizontalAlignment="Center">
                    <Border Width="150" Height="103" ClipToBounds="True">
                        <Image Source="https://i.imgur.com/yVApvuV.png"
                               Stretch="UniformToFill" Margin="0,-47,0,39"/>
                    </Border>
                    <TextBlock Text="RENTAL REV." FontSize="28" FontWeight="Bold"
                               Foreground="Lavender" Margin="0,-38,0,0"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="16,0">
                    <Border CornerRadius="14" Padding="14,12" Margin="0,0,0,8">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#D4C5F0" Offset="0"/>
                                <GradientStop Color="#C9B8E8" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏠" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Dashboard" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="14" Padding="14,12" Margin="0,0,0,4"
                            Cursor="Hand" Background="Transparent" MouseLeftButtonUp="FleetBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🚗" Margin="0,0,8,0"/>
                            <TextBlock Text="Fleet Status" Foreground="#FFFFFFCC"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="14" Padding="14,12" Margin="0,0,0,4"
                            Cursor="Hand" Background="Transparent" MouseLeftButtonUp="ReturnBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔄" Margin="0,0,8,0"/>
                            <TextBlock Text="Process Return" Foreground="#FFFFFFCC"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="14" Padding="14,12" Margin="0,0,0,4"
                            Cursor="Hand" Background="Transparent" MouseLeftButtonUp="AddCarBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="➕" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Car" Foreground="#FFFFFFCC"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="14" Padding="14,12" Margin="0,0,0,4"
                            Cursor="Hand" Background="Transparent" MouseLeftButtonUp="MaintenanceBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔧" Margin="0,0,8,0"/>
                            <TextBlock Text="Maintenance" Foreground="#FFFFFFCC"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="14" Padding="14,12" Margin="0,0,0,4"
                            Cursor="Hand" Background="Transparent" MouseLeftButtonUp="RevenueBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💰" Margin="0,0,8,0"/>
                            <TextBlock Text="Revenue" Foreground="#FFFFFFCC"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="2" Margin="16,0,16,24">
                    <Border CornerRadius="14" Padding="14,12"
                            Cursor="Hand" MouseLeftButtonUp="LogoutBtn_Click">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#E8D8FF" Offset="0"/>
                                <GradientStop Color="LavenderBlush" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏻" Margin="0,0,8,0"/>
                            <TextBlock Text="Log Out" FontWeight="Bold"
                                       Foreground="{StaticResource TextMedium}"/>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="Made by Yuan" FontSize="10"
                               Foreground="LightGray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

            <!-- MAIN CONTENT -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="115*"/>
                    <RowDefinition Height="187*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.RowSpan="2">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#F0EBFF" Offset="0"/>
                            <GradientStop Color="#E8F0FF" Offset="0.5"/>
                            <GradientStop Color="MediumPurple" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Image Source="https://i.imgur.com/vTJAlag.jpeg" Opacity="0.10"
                       Stretch="UniformToFill" Margin="0,10,1,-3" Grid.RowSpan="2"/>
                <Ellipse Width="420" Height="420" Opacity="0.18"
                         HorizontalAlignment="Right" VerticalAlignment="Top"
                         Margin="0,-120,-120,0" Grid.RowSpan="2">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#C9B8E8" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Ellipse Width="320" Height="320" Opacity="0.12"
                         HorizontalAlignment="Left" VerticalAlignment="Bottom"
                         Margin="-60,0,0,-60" Grid.Row="1">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#B8D4F0" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- TOP BAR -->
                <Border VerticalAlignment="Top" Height="60" BorderThickness="0">
                    <Grid Margin="28,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="☰"
                                Style="{StaticResource HamburgerButtonStyle}"
                                VerticalAlignment="Center"
                                Click="Hamburger_Click"/>
                        <TextBlock Grid.Column="1" Text="Admin Dashboard"
                                   FontSize="16" FontWeight="Bold"
                                   Foreground="{StaticResource TextMedium}"
                                   VerticalAlignment="Center" Margin="12,0,0,0"/>
                        <Border Grid.Column="2" Background="White"
                                CornerRadius="20" Padding="12,7" VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect Color="#C9B8E8" BlurRadius="25" ShadowDepth="0" Opacity="0.25"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔐" Margin="0,0,6,0"/>
                                <TextBlock x:Name="UserLabel" Text="Admin"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextMedium}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- BODY -->
                <Grid Margin="36,76,36,24" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <TextBlock x:Name="WelcomeText" Text="Welcome back, Manager!"
                                   FontSize="22" FontWeight="Bold"
                                   Foreground="{StaticResource TextDark}"/>
                        <TextBlock Text="Manage fleet, rentals and operations."
                                   Foreground="{StaticResource TextMuted}" Margin="0,6,0,0"/>
                    </StackPanel>
                    <WrapPanel Grid.Row="2">
                        <Border Width="210" Height="130" CornerRadius="20"
                                Margin="0,0,18,18" Cursor="Hand" MouseLeftButtonUp="FleetBtn_Click">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="White" Offset="0.01"/>
                                    <GradientStop Color="Lavender" Offset="0.4"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#C8B6FF" BlurRadius="30" ShadowDepth="0" Opacity="0.35"/>
                            </Border.Effect>
                            <Grid Margin="18">
                                <StackPanel>
                                    <TextBlock Text="🚗" FontSize="26"/>
                                    <TextBlock Text="Fleet Status" FontWeight="Bold" Margin="0,12,0,2"/>
                                    <TextBlock Text="View all vehicles" FontSize="12" Foreground="#5F5A87"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border Width="210" Height="130" CornerRadius="20"
                                Margin="0,0,18,18" Cursor="Hand" MouseLeftButtonUp="ReturnBtn_Click">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="White" Offset="0.01"/>
                                    <GradientStop Color="Lavender" Offset="0.4"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#C8B6FF" BlurRadius="30" ShadowDepth="0" Opacity="0.35"/>
                            </Border.Effect>
                            <Grid Margin="18">
                                <StackPanel>
                                    <TextBlock Text="🔄" FontSize="26"/>
                                    <TextBlock Text="Process Return" FontWeight="Bold" Margin="0,12,0,2"/>
                                    <TextBlock Text="Complete active returns" FontSize="12" Foreground="#5F5A87"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border Width="210" Height="130" CornerRadius="20"
                                Margin="0,0,18,18" Cursor="Hand" MouseLeftButtonUp="AddCarBtn_Click">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="White" Offset="0.01"/>
                                    <GradientStop Color="Lavender" Offset="0.4"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#C8B6FF" BlurRadius="30" ShadowDepth="0" Opacity="0.35"/>
                            </Border.Effect>
                            <Grid Margin="18">
                                <StackPanel>
                                    <TextBlock Text="➕" FontSize="26"/>
                                    <TextBlock Text="Add Car" FontWeight="Bold" Margin="0,12,0,2"/>
                                    <TextBlock Text="Register new vehicle" FontSize="12" Foreground="#5F5A87"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border Width="210" Height="130" CornerRadius="20"
                                Margin="0,0,18,18" Cursor="Hand" MouseLeftButtonUp="MaintenanceBtn_Click">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="White" Offset="0.01"/>
                                    <GradientStop Color="Lavender" Offset="0.4"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#C8B6FF" BlurRadius="30" ShadowDepth="0" Opacity="0.35"/>
                            </Border.Effect>
                            <Grid Margin="18">
                                <StackPanel>
                                    <TextBlock Text="🔧" FontSize="26"/>
                                    <TextBlock Text="Maintenance" FontWeight="Bold" Margin="0,12,0,2"/>
                                    <TextBlock Text="Manage service records" FontSize="12" Foreground="#5F5A87"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                    </WrapPanel>
                </Grid>
                <Border Width="210" Height="130" CornerRadius="20"
        Margin="36,168,738,76" Cursor="Hand" MouseLeftButtonUp="RevenueBtn_Click" RenderTransformOrigin="-3.89,1.809" Grid.Row="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="White" Offset="0.01"/>
                            <GradientStop Color="Lavender" Offset="0.4"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#C8B6FF" BlurRadius="30" ShadowDepth="0" Opacity="0.35"/>
                    </Border.Effect>
                    <Grid Margin="18">
                        <StackPanel>
                            <TextBlock Text="💰" FontSize="26"/>
                            <TextBlock Text="Revenue" FontWeight="Bold" Margin="0,12,0,2"/>
                            <TextBlock Text="Earnings &amp; analytics" FontSize="12" Foreground="#5F5A87"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </Grid>

        </Grid>

    </Viewbox>
</Window>