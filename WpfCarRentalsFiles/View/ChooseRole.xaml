<Window x:Class="WpfFirst.View.ChooseRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rental Rev. — Choose Role"
        Height="580" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>

        <!-- BACKGROUND GRADIENT -->
        <Rectangle>

            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#D4C5F0" Offset="0"/>
                    <GradientStop Color="#B8D4F0" Offset="0.5"/>
                    <GradientStop Color="#C9B8E8" Offset="1"/>


                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- BG ICON -->
        <TextBlock Text="" FontSize="300" Opacity="0.05"
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   Margin="0,0,-40,0" Foreground="#5A189A"/>

        <Image Source="https://i.imgur.com/vTJAlag.jpeg" Opacity="0.10"
             HorizontalAlignment="Left" VerticalAlignment="Center" Stretch="UniformToFill" Grid.ColumnSpan="2"/>

        <!-- CENTER CARD -->
        <Viewbox Grid.Row="1" Stretch="Uniform" Margin=" 0,50,0,50"
                 VerticalAlignment="Center">

            <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="420"
                CornerRadius="28" Padding="48,42"
                BorderThickness="0">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#F0EBFF" Offset="0"/>
                    <GradientStop Color="#E8F0FF" Offset="0.5"/>
                    <GradientStop Color="#C8B6FF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#8A2BE2" BlurRadius="50"
                                  ShadowDepth="0" Opacity="0.16"/>
            </Border.Effect>

            <StackPanel>

                <!-- LOGO -->
                <Border Width="80" Height="80" CornerRadius="40"
                        HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#F0EBFF" Offset="0"/>
                            <GradientStop Color="#E8F0FF" Offset="0.5"/>
                            <GradientStop Color="#E8F0FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="" FontSize="36"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- APP NAME -->
                <TextBlock Text="RENTAL REV."
FontSize="20"
FontWeight="Bold" Margin="0,-40,0,0"  
HorizontalAlignment="Center" RenderTransformOrigin="0.543,-0.453">

                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#D4C5F0" Offset="0"/>
                            <GradientStop Color="#B8D4F0" Offset="0.5"/>
                            <GradientStop Color="#C9B8E8" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>

                </TextBlock>
                <TextBlock Text="Hello and Good Day!"
                           FontSize="18" FontWeight="Bold"
                           Foreground= "Black"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,6" FontFamily="Segoe UI"/>

                <TextBlock Text="Select your role to continue."
                           FontSize="13" Foreground="#AAA"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30" FontFamily="Segoe UI"/>

                <!-- CUSTOMER CARD -->
                <!-- MouseLeftButtonUp="CustomerCard_Click" — fires .cs navigation -->
                <Border Background="#F8F4FF" CornerRadius="16"
                        BorderBrush="#E0D0FF" BorderThickness="1.5"
                        Padding="24,18" Margin="0,0,0,14"
                        Cursor="Hand" MouseLeftButtonUp="CustomerCard_Click">
                    <Border.Effect>
                        <DropShadowEffect Color="#C9B8E8" BlurRadius="12"
                                          ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="46" Height="46"
                                CornerRadius="12" Margin="0,0,14,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="LavenderBlush" Offset="1"/>
                                    <GradientStop Color = "#C9B8E8" Offset="0.3"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="👤" FontSize="22"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Customer" FontSize="16"
                                       FontWeight="Bold" Foreground="#1A1A2E"
                                       FontFamily="Segoe UI"/>
                            <TextBlock Text="Browse &amp; rent cars"
                                       FontSize="12" Foreground="#AAA"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                        <TextBlock Grid.Column="2" Text="→" FontSize="22"
                                   Foreground="#8A2BE2" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- ADMIN CARD -->
                <!-- MouseLeftButtonUp="AdminCard_Click" — fires .cs navigation -->
                <Border Background="#F3EEFF" CornerRadius="16"
                        BorderBrush="#D4B8FF" BorderThickness="1.5"
                        Padding="24,18" Cursor="Hand"
                        MouseLeftButtonUp="AdminCard_Click">
                    <Border.Effect>
                        <DropShadowEffect Color="#C9B8E8" BlurRadius="12"
                                          ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="46" Height="46"
                                CornerRadius="12" Margin="0,0,14,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="LavenderBlush" Offset="0"/>
                                    <GradientStop Color="MediumPurple" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="🔐" FontSize="22"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Admin" FontSize="16"
                                       FontWeight="Bold" Foreground="#1A1A2E"
                                       FontFamily="Segoe UI"/>
                            <TextBlock Text="Manage fleet &amp; rentals"
                                       FontSize="12" Foreground="#AAA"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                        <TextBlock Grid.Column="2" Text="→" FontSize="22"
                                   Foreground="#6A1BBF" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- FOOTER -->
                <TextBlock Text="Made by Yuan"
                           FontSize="12" Foreground="#CCC"
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0" FontFamily="Segoe UI"/>

            </StackPanel>
                
        </Border>
            </Viewbox>

        <Image Source="https://i.imgur.com/LgR81Ns.png"
  HorizontalAlignment="Center"
  VerticalAlignment="Top"
  Width="156"
  Height="219"
  Margin="0,32,0,0"/>


    </Grid>
</Window>