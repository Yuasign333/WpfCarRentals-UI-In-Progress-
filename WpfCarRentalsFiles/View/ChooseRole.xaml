<Window x:Class="WpfFirst.View.ChooseRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rental Rev. — Choose Role"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
       >

    
        <Viewbox Stretch ="UniformToFill">

            <Grid>

                <!-- BG fills 100% of window at ALL sizes -->
                <Rectangle Width="1200" Height=" 600">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#D4C5F0" Offset="0"/>
                            <GradientStop Color="#B8D4F0" Offset="0.5"/>
                            <GradientStop Color="#C9B8E8" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <!-- CAR WATERMARK fills window -->
                <Image Source="https://i.imgur.com/vTJAlag.jpeg"
               Opacity="0.10" Stretch="UniformToFill"/>


         

                <!-- GLOW TOP RIGHT -->
                <Ellipse Width="480" Height="480" Opacity="0.20"
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,-140,-140,0">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#C9B8E8" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- GLOW BOTTOM LEFT -->
                <Ellipse Width="360" Height="360" Opacity="0.15"
                 HorizontalAlignment="Left" VerticalAlignment="Bottom"
                 Margin="-80,0,0,-80">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#B8D4F0" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- CENTERED CARD — floats on top of the full-window background -->
                <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="420"
                CornerRadius="28"
                Padding="48,42"
                BorderThickness="0" Margin="0,0,0,0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#F0EBFF" Offset="0"/>
                            <GradientStop Color="#E8F0FF" Offset="0.5"/>
                            <GradientStop Color="#C8B6FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#8A2BE2" BlurRadius="50"
                                  ShadowDepth="0" Opacity="0.16"/>
                    </Border.Effect>

                    <StackPanel>

                  
                        <!-- BRAND -->
                        <Image Source="https://i.imgur.com/LgR81Ns.png"
                       Height="167" Margin="0,-10,0,40" HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                       />

                        <!-- BRAND -->
                        <TextBlock Text="RENTAL REV."
                           FontSize="20" FontWeight="Bold"
                           Margin="0,-80,0,0"
                           HorizontalAlignment="Center">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#D4C5F0" Offset="0"/>
                                    <GradientStop Color="#B8D4F0" Offset="0.5"/>
                                    <GradientStop Color="#C9B8E8" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>

                        <TextBlock Text="Hello and Good Day!"
                           FontSize="18" FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,-40,0,6" FontFamily="Segoe UI"/>

                        <TextBlock Text="Select your role to continue."
                           FontSize="13" Foreground="#AAA"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30" FontFamily="Segoe UI"/>

                        <!-- CUSTOMER CARD -->
                        <Border Background="#F8F4FF" CornerRadius="16"
                        BorderBrush="#E0D0FF" BorderThickness="1.5"
                        Padding="24,18" Margin="0,0,0,14"
                        Cursor="Hand" MouseLeftButtonUp="CustomerCard_Click">
                            <Border.Effect>
                                <DropShadowEffect Color="#C9B8E8" BlurRadius="12"
                                          ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="46" Height="46"
                                CornerRadius="12" Margin="0,0,14,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#C9B8E8" Offset="0.3"/>
                                            <GradientStop Color="LavenderBlush" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="👤" FontSize="22"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Customer" FontSize="16"
                                       FontWeight="Bold" Foreground="#1A1A2E"
                                       FontFamily="Segoe UI"/>
                                    <TextBlock Text="Browse &amp; rent cars"
                                       FontSize="12" Foreground="#AAA"
                                       FontFamily="Segoe UI"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="→" FontSize="22"
                                   Foreground="#8A2BE2" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- ADMIN CARD -->
                        <Border Background="#F3EEFF" CornerRadius="16"
                        BorderBrush="#D4B8FF" BorderThickness="1.5"
                        Padding="24,18" Cursor="Hand"
                        MouseLeftButtonUp="AdminCard_Click">
                            <Border.Effect>
                                <DropShadowEffect Color="#C9B8E8" BlurRadius="12"
                                          ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="46" Height="46"
                                CornerRadius="12" Margin="0,0,14,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="LavenderBlush" Offset="0"/>
                                            <GradientStop Color="MediumPurple" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="🔐" FontSize="22"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Admin" FontSize="16"
                                       FontWeight="Bold" Foreground="#1A1A2E"
                                       FontFamily="Segoe UI"/>
                                    <TextBlock Text="Manage fleet &amp; rentals"
                                       FontSize="12" Foreground="#AAA"
                                       FontFamily="Segoe UI"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="→" FontSize="22"
                                   Foreground="#6A1BBF" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- FOOTER -->
                        <TextBlock Text="Made by Yuan"
                           FontSize="12" Foreground="#CCC"
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0" FontFamily="Segoe UI"/>

                    </StackPanel>
                </Border>
            <Button x:Name="ExitButton" Content="❌" 
Margin="0,10,1149,557"
Click="BackButton_Click"
Background="Transparent"
BorderThickness="0"
Foreground="#3D1A7A"
FontSize="16"
Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" 
                      VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        </Viewbox>

  



</Window>