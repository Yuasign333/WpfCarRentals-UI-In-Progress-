<Window x:Class="WpfFirst.View.RevenueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rental Rev. — Revenue Report"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Viewbox Stretch="UniformToFill">
        <Grid>
            <Rectangle Height="620" Width="1020">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F0EBFF" Offset="0"/>
                        <GradientStop Color="#E8F0FF" Offset="0.5"/>
                        <GradientStop Color="MediumPurple" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Image Source="https://i.imgur.com/vTJAlag.jpeg" Opacity="0.10" Stretch="UniformToFill"/>
            <Ellipse Width="420" Height="420" Opacity="0.18" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-120,-120,0">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#C9B8E8" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="320" Height="320" Opacity="0.12" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-60,0,0,-60">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#B8D4F0" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Border VerticalAlignment="Top" Height="60" BorderThickness="0">
                <Grid Margin="28,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="RENTAL REV." FontSize="13" FontWeight="Black" Foreground="{StaticResource TextLight}"/>
                        <TextBlock Text="  /  " FontSize="13" Foreground="{StaticResource TextBreadcrumb}"/>
                        <TextBlock Text="Revenue Report" FontSize="15" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="White" CornerRadius="20" Padding="12,7" VerticalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="#C9B8E8" BlurRadius="25" ShadowDepth="0" Opacity="0.25"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔐" Margin="0,0,6,0"/>
                            <TextBlock x:Name="UserLabel" Text="Admin" FontWeight="SemiBold" Foreground="{StaticResource TextMedium}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="420" CornerRadius="20" Padding="44,40" Background="White">
                <Border.Effect>
                    <DropShadowEffect Color="#C8B6FF" BlurRadius="30" ShadowDepth="0" Opacity="0.35"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center">
                    <Border Width="72" Height="72" CornerRadius="18" HorizontalAlignment="Center" Margin="0,0,0,18">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#B8D4F0" Offset="0"/>
                                <GradientStop Color="#D4C5F0" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#C8B6FF" BlurRadius="16" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <TextBlock Text="💰" FontSize="34" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Revenue Report" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextDark}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="View earnings and analytics." FontSize="13" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,28"/>
                    <Border HorizontalAlignment="Center" CornerRadius="12" Padding="20,10" Margin="0,0,0,16">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#D4C5F0" Offset="0"/>
                                <GradientStop Color="#C9B8E8" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🚧 " FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Work in progress — coming soon" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextMedium}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="12" Padding="20,10" Cursor="Hand" HorizontalAlignment="Center" MouseLeftButtonUp="BackBtn_Click">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="LavenderBlush" Offset="0"/>
                                <GradientStop Color="#D4C5F0" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="← " FontSize="14" Foreground="{StaticResource TextMedium}" VerticalAlignment="Center"/>
                            <TextBlock Text="Back to Dashboard" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextMedium}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Window>