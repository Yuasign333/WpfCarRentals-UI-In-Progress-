<Window x:Class="WpfFirst.View.CustomerLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rental Rev. — Customer Login"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
      >


    
        <Viewbox Stretch ="UniformToFill">
            <Grid>

                <!-- BG -->
                <Rectangle Width="1200" Height=" 600">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#F0EBFF" Offset="0"/>
                            <GradientStop Color="#E8F0FF" Offset="0.5"/>
                            <GradientStop Color="MediumPurple" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Image Source="https://i.imgur.com/vTJAlag.jpeg"
               Opacity="0.10" Stretch="UniformToFill"/>

                <Ellipse Width="420" Height="420" Opacity="0.18"
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,-120,-120,0">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#C9B8E8" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <Ellipse Width="320" Height="320" Opacity="0.12"
                 HorizontalAlignment="Left" VerticalAlignment="Bottom"
                 Margin="-60,0,0,-60">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#B8D4F0" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>


                <Viewbox Grid.Row="1" Stretch="Uniform" Margin="0,0,0,42">
                    <!-- CENTERED CARD -->
                    <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="340">

                        <!-- LOGO -->

                        <!-- LOGO -->

                        <!-- LOGO -->
                        <Border Width="120" Height="83" ClipToBounds="True"
                    HorizontalAlignment="Center">
                            <Image Source="https://i.imgur.com/LgR81Ns.png"
                       Stretch="UniformToFill" Margin="0,-19,0,13"/>
                        </Border>
                        <!-- BRAND -->
                        <TextBlock Text="RENTAL REV."
                       FontSize="24" FontWeight="Bold"
                       Foreground="LavenderBlush"
                       HorizontalAlignment="Center"
                       FontFamily="Segoe UI"
                       Margin="0,-18,2,2">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#8A2BE2" BlurRadius="10"
                                      ShadowDepth="0" Opacity="0.4"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <!-- CARD -->


                        <Border Margin ="0,10,0,0" CornerRadius="20" Padding="32,28" BorderThickness="0" Width="314">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#F0EBFF" Offset="0"/>
                                    <GradientStop Color="#E8F0FF" Offset="0.5"/>
                                    <GradientStop Color="#C8B6FF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#C8B6FF" BlurRadius="30"
                                      ShadowDepth="0" Opacity="0.35"/>
                            </Border.Effect>

                            <StackPanel>

                                <TextBlock Text="Customer Login"
                               FontSize="22" FontWeight="Bold"
                               Foreground="#2A1B5E"
                               HorizontalAlignment="Center"
                               FontFamily="Segoe UI"
                               Margin="0,0,0,24"/>

                                <!-- USERNAME LABEL -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <TextBlock Text="👤" FontSize="13" VerticalAlignment="Center"
                                   Foreground="#7E74A6" Margin="0,0,6,0"/>
                                    <Border Width="1" Background="#E0D4FF" Margin="0,2,8,2"/>
                                    <TextBlock Text="Customer ID" FontSize="13"
                                   Foreground="#7E74A6" FontFamily="Segoe UI"
                                   VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- USERNAME INPUT -->
                                <Border CornerRadius="10" BorderBrush="#D0C4F0"
                            BorderThickness="1.5" Margin="0,0,0,16"
                            Background="#F8F4FF">
                                    <TextBox x:Name="UsernameBox"
                                 Height="38" Padding="10,8"
                                 FontSize="14" FontFamily="Segoe UI"
                                 Background="Transparent"
                                 Foreground="#2A1B5E"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"/>
                                </Border>

                                <!-- PASSWORD LABEL -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <TextBlock Text="🔒" FontSize="13" VerticalAlignment="Center"
                                   Foreground="#7E74A6" Margin="0,0,6,0"/>
                                    <Border Width="1" Background="#E0D4FF" Margin="0,2,8,2"/>
                                    <TextBlock Text="Password" FontSize="13"
                                   Foreground="#7E74A6" FontFamily="Segoe UI"
                                   VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- PASSWORD INPUT -->
                                <Border CornerRadius="10" BorderBrush="#D0C4F0"
                            BorderThickness="1.5" Margin="0,0,0,16"
                            Background="#F8F4FF">
                                    <PasswordBox x:Name="PasswordBox"
                                     Height="38" Padding="10,8"
                                     FontSize="14" FontFamily="Segoe UI"
                                     Background="Transparent"
                                     Foreground="#2A1B5E"
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"/>
                                </Border>

                                <!-- ERROR BANNER -->
                                <Border x:Name="ErrorBanner" Visibility="Hidden"
                            Background="#FFF0F5" BorderBrush="#F0C0D0"
                            BorderThickness="1" CornerRadius="8"
                            Padding="12,8" Margin="0,0,0,14">
                                    <TextBlock x:Name="ErrorText"
                                   Foreground="#C0304A" FontSize="12"
                                   TextWrapping="Wrap" FontFamily="Segoe UI"/>
                                </Border>

                                <!-- LOGIN BUTTON — Button owns the click, ControlTemplate handles visuals -->
                                <Button Content="Login"
                            Height="46" FontSize="16"
                            FontWeight="Bold" FontFamily="Segoe UI"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="LoginBtn_Click">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#4158D0" Offset="0"/>
                                            <GradientStop Color="MediumPurple" Offset="0.5"/>
                                            <GradientStop Color="Purple" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#C8B6FF" BlurRadius="20"
                                                          ShadowDepth="0" Opacity="0.4"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- HINT -->
                                <TextBlock Text="Default: C001 / customer123"
                               FontSize="11" Foreground="#AAA"
                               HorizontalAlignment="Center"
                               FontFamily="Segoe UI"
                               Margin="0,10,0,0"/>

                                <TextBlock Text="Made by Yuan"
                               FontSize="12" Foreground="#7E74A6"
                               HorizontalAlignment="Center"
                               FontFamily="Segoe UI"
                               Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>


                </Viewbox>
                
                <Button x:Name="BackButton" Content="←" 
        Margin="0,10,1149,557"
        Click="BackButton_Click"
        Background="Transparent"
        BorderThickness="0"
        Foreground="#3D1A7A"
        FontSize="26"
        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </Grid>
        </Viewbox>
    

</Window>